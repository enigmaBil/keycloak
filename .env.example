# ==========================================
# KEYCLOAK ADMIN CONFIGURATION
# ==========================================
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=admin123!
KC_HOSTNAME=localhost
KC_HTTP_PORT=8080

# ==========================================
# KEYCLOAK DATABASE (PostgreSQL)
# ==========================================
KC_DB=postgres
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=keycloak123!
KC_DB_URL_HOST=localhost
KC_DB_URL_PORT=5432

# ==========================================
# APPLICATION DATABASE (PostgreSQL)
# ==========================================
BACKEND_DB_HOST=postgres_backend
BACKEND_DB_PORT=5433
BACKEND_DB_NAME=demo_db
BACKEND_DB_USER=demo_user
BACKEND_DB_PASSWORD=demo_password123!

# Prisma connection URL (format PostgreSQL)
DATABASE_URL=postgresql://demo_user:demo_password123!@localhost:5433/demo_db

# ==========================================
# KEYCLOAK REALM & CLIENTS
# ==========================================
APP_REALM_NAME=Demo-Realm
BACKEND_CLIENT_ID=demo-backend
FRONTEND_CLIENT_ID=demo-frontend

# IMPORTANT: Obtenez ces secrets depuis Keycloak après avoir créé les clients
BACKEND_CLIENT_SECRET=your-backend-client-secret
FRONTEND_CLIENT_SECRET=your-frontend-client-secret

# ==========================================
# APPLICATION URLS
# ==========================================
FRONTEND_URL=http://localhost:3000

# URL interne Keycloak (pour le backend dans Docker)
KC_URL_INTERNAL=http://keycloak:8080
# URL publique Keycloak (pour le navigateur)
KC_URL_PUBLIC=http://localhost:8080

# ==========================================
# KEYCLOAK OIDC ENDPOINTS
# ==========================================
KC_ISSUER_URL=http://localhost:8080/realms/Demo-Realm
KC_JWKS_URL=http://localhost:8080/realms/Demo-Realm/protocol/openid-connect/certs
KC_TOKEN_ENDPOINT=http://localhost:8080/realms/Demo-Realm/protocol/openid-connect/token
KC_AUTHORIZATION_ENDPOINT=http://localhost:8080/realms/Demo-Realm/protocol/openid-connect/auth
KC_USERINFO_ENDPOINT=http://localhost:8080/realms/Demo-Realm/protocol/openid-connect/userinfo

# ==========================================
# NEXTAUTH (FRONTEND)
# ==========================================
NEXT_PUBLIC_AUTH_URL=http://localhost:3000
# Générez avec: openssl rand -base64 32
NEXT_PUBLIC_AUTH_SECRET=your-super-secret-key-change-this-in-production

# ==========================================
# SERVICE PORTS
# ==========================================
KC_PORT=8080
BACKEND_PORT=3001
FRONTEND_PORT=3000